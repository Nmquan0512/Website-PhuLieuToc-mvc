@model IEnumerable<PhuLieuToc.Models.SanPham>

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #99b18f 0%, #7a9470 100%);">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h4 class="text-white mb-1 fw-bold">
                                <i class="fas fa-box me-2"></i>Quản lý Sản phẩm
                            </h4>
                            <p class="text-white-50 mb-0">Theo dõi và quản lý tất cả sản phẩm</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="d-flex flex-wrap justify-content-md-end gap-2">
                                <button class="btn btn-light btn-sm" id="refreshBtn">
                                    <i class="fas fa-sync-alt me-1"></i>Làm mới
                                </button>
                                <a class="btn btn-light btn-sm" asp-area="Admin" asp-controller="SanPham" asp-action="Create">
                                    <i class="fas fa-plus me-1"></i>Thêm sản phẩm
                                </a>
                                <div class="dropdown">
                                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-filter me-1"></i>Lọc trạng thái
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#" data-filter="all">Tất cả</a></li>
                                        <li><a class="dropdown-item" href="#" data-filter="1">Hiển thị</a></li>
                                        <li><a class="dropdown-item" href="#" data-filter="0">Ẩn</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4" id="statsCards">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-2"
                         style="width: 50px; height: 50px; background: rgba(25, 135, 84, 0.1);">
                        <i class="fas fa-box text-success fs-5"></i>
                    </div>
                    <h6 class="card-title mb-1">Tổng sản phẩm</h6>
                    <h4 class="text-success mb-0 fw-bold" id="stat-total">0</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-2"
                         style="width: 50px; height: 50px; background: rgba(13, 110, 253, 0.1);">
                        <i class="fas fa-eye text-primary fs-5"></i>
                    </div>
                    <h6 class="card-title mb-1">Đang hiển thị</h6>
                    <h4 class="text-primary mb-0 fw-bold" id="stat-active">0</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-2"
                         style="width: 50px; height: 50px; background: rgba(108, 117, 125, 0.1);">
                        <i class="fas fa-eye-slash text-secondary fs-5"></i>
                    </div>
                    <h6 class="card-title mb-1">Đang ẩn</h6>
                    <h4 class="text-secondary mb-0 fw-bold" id="stat-inactive">0</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-2"
                         style="width: 50px; height: 50px; background: rgba(255, 193, 7, 0.1);">
                        <i class="fas fa-layer-group text-warning fs-5"></i>
                    </div>
                    <h6 class="card-title mb-1">Tổng biến thể</h6>
                    <h4 class="text-warning mb-0 fw-bold" id="stat-variants">0</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h6 class="mb-0 fw-semibold">Danh sách sản phẩm</h6>
                </div>
                <div class="col-md-6">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="searchInput"
                               placeholder="Tìm kiếm theo tên sản phẩm hoặc slug...">
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="productsTable" class="table table-hover align-middle mb-0">
                    <thead style="background: #f8f9fa;">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">Ảnh</th>
                            <th class="px-4 py-3 fw-semibold">Sản phẩm</th>
                            <th class="px-4 py-3 fw-semibold">Danh mục</th>
                            <th class="px-4 py-3 fw-semibold">Thương hiệu</th>
                            <th class="px-4 py-3 fw-semibold text-center">Biến thể</th>
                            <th class="px-4 py-3 fw-semibold text-center">Trạng thái</th>
                            <th class="px-4 py-3 fw-semibold text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr data-status="@p.TrangThai" class="border-bottom">
                                <td class="px-4 py-3">
                                    @{
                                        var firstVariant = p.SanPhamChiTiets?.FirstOrDefault();
                                        var imagePath = firstVariant?.Anh;
                                    }
                                    @if (!string.IsNullOrEmpty(imagePath))
                                    {
                                        <img src="@imagePath" alt="@p.TenSanPham"
                                             style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);" />
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center"
                                             style="width: 50px; height: 50px; background: linear-gradient(135deg, #f8f9fa, #e9ecef); border-radius: 8px; color: #6c757d;">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </td>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle me-3 d-flex align-items-center justify-content-center"
                                             style="width: 35px; height: 35px; background: linear-gradient(135deg, #99b18f, #7a9470); color: white; font-size: 12px; font-weight: bold;">
                                            <i class="fas fa-box"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold text-primary">@p.TenSanPham</div>
                                            <small class="text-muted">@p.Slug</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle me-2 d-flex align-items-center justify-content-center"
                                             style="width: 30px; height: 30px; background: #e9ecef;">
                                            <i class="fas fa-folder text-muted fs-6"></i>
                                        </div>
                                        <span class="fw-medium">@(p.Category?.TenDanhMuc ?? "Chưa phân loại")</span>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle me-2 d-flex align-items-center justify-content-center"
                                             style="width: 30px; height: 30px; background: #e9ecef;">
                                            <i class="fas fa-tag text-muted fs-6"></i>
                                        </div>
                                        <span class="fw-medium">@(p.Brand?.TenThuongHieu ?? "Không có")</span>
                                    </div>
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <span class="badge rounded-pill px-3 py-2" style="background: rgba(255, 193, 7, 0.1); color: #ffc107; font-weight: 500;">
                                        <i class="fas fa-layer-group me-1"></i>@(p.SanPhamChiTiets?.Count ?? 0)
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-center">
                                    @if (p.TrangThai == 1)
                                    {
                                        <span class="badge rounded-pill px-3 py-2" style="background: rgba(25, 135, 84, 0.1); color: #198754; font-weight: 500;">
                                            <i class="fas fa-eye me-1"></i>Hiển thị
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill px-3 py-2" style="background: rgba(108, 117, 125, 0.1); color: #6c757d; font-weight: 500;">
                                            <i class="fas fa-eye-slash me-1"></i>Ẩn
                                        </span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <div class="d-flex justify-content-center gap-1">
                                        <a asp-area="Admin" asp-controller="SanPham" asp-action="Edit" asp-route-id="@p.SanPhamId"
                                           class="btn btn-sm btn-outline-primary rounded-pill px-3"
                                           data-bs-toggle="tooltip" title="Chỉnh sửa sản phẩm">
                                            <i class="fas fa-edit me-1"></i>Sửa
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger rounded-pill px-3 btn-delete"
                                                data-id="@p.SanPhamId"
                                                data-bs-toggle="tooltip" title="Xóa sản phẩm">
                                            <i class="fas fa-trash me-1"></i>Xóa
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Empty State -->
            <div id="emptyState" class="text-center py-5 d-none">
                <div class="mb-3">
                    <i class="fas fa-box text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                </div>
                <h5 class="text-muted">Không tìm thấy sản phẩm</h5>
                <p class="text-muted mb-0">Thử thay đổi bộ lọc hoặc tìm kiếm với từ khóa khác</p>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="d-none position-fixed top-0 start-0 w-100 h-100"
     style="background: rgba(255,255,255,0.8); z-index: 9999;">
    <div class="d-flex align-items-center justify-content-center h-100">
        <div class="text-center">
            <div class="spinner-border" style="color: #99b18f;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="mt-2 text-muted">Đang xử lý...</div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            let table = new DataTable('#productsTable', {
                order: [[1, 'asc']],
                pageLength: 10,
                language: {
                    search: "",
                    lengthMenu: "Hiển thị _MENU_ sản phẩm",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ sản phẩm",
                    infoEmpty: "Không có sản phẩm",
                    infoFiltered: "(lọc từ _MAX_ sản phẩm)",
                    paginate: {
                        first: "Đầu",
                        last: "Cuối",
                        next: "Sau",
                        previous: "Trước"
                    }
                },
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip',
                drawCallback: function () {
                    updateStats();
                    checkEmptyState();
                }
            });

            // Custom search
            $('#searchInput').on('keyup', function () {
                table.search(this.value).draw();
            });

            // Status filter
            $('[data-filter]').on('click', function (e) {
                e.preventDefault();
                let filter = $(this).data('filter');

                if (filter === 'all') {
                    table.columns(5).search('').draw();
                } else {
                    table.columns(5).search(filter == '1' ? 'Hiển thị' : 'Ẩn').draw();
                }

                // Update dropdown text
                $('.dropdown-toggle').html('<i class="fas fa-filter me-1"></i>' + $(this).text());
            });

            // Refresh button
            $('#refreshBtn').on('click', function () {
                showLoading();
                setTimeout(() => {
                    location.reload();
                }, 500);
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Delete functionality
            $('.btn-delete').on('click', async function () {
                const id = $(this).data('id');

                if (window.Swal) {
                    const result = await Swal.fire({
                        icon: 'warning',
                        title: 'Xóa sản phẩm?',
                        text: 'Hành động này không thể hoàn tác!',
                        showCancelButton: true,
                        confirmButtonText: 'Xóa',
                        cancelButtonText: 'Hủy',
                        confirmButtonColor: '#dc3545'
                    });

                    if (!result.isConfirmed) return;
                } else {
                    if (!confirm('Xóa sản phẩm này?')) return;
                }

                showLoading();

                try {
                    const res = await fetch('@Url.Action("Delete", "SanPham", new { area = "Admin" })' + `?id=${id}`, {
                        method: 'DELETE'
                    });
                    const json = await res.json();

                    if (json && json.success) {
                        if (window.Swal) {
                            await Swal.fire('Đã xóa!', 'Sản phẩm đã được xóa thành công.', 'success');
                        }
                        location.reload();
                    } else {
                        if (window.Swal) {
                            Swal.fire('Lỗi!', json.message || 'Xóa thất bại', 'error');
                        } else {
                            alert(json.message || 'Xóa thất bại');
                        }
                    }
                } catch (error) {
                    if (window.Swal) {
                        Swal.fire('Lỗi!', 'Có lỗi xảy ra khi xóa sản phẩm', 'error');
                    } else {
                        alert('Có lỗi xảy ra khi xóa sản phẩm');
                    }
                } finally {
                    $('#loadingOverlay').addClass('d-none');
                }
            });

            // Initial stats update
            updateStats();
            $('#loadingOverlay').addClass('d-none');
        });

        function updateStats() {
            let total = $('tr[data-status]:visible').length;
            let active = $('tr[data-status="1"]:visible').length;
            let inactive = $('tr[data-status="0"]:visible').length;
            let variants = 0;

            // Calculate total variants
            $('tr[data-status]:visible').each(function () {
                const variantText = $(this).find('td:nth-child(5) .badge').text().trim();
                const variantCount = parseInt(variantText) || 0;
                variants += variantCount;
            });

            $('#stat-total').text(total);
            $('#stat-active').text(active);
            $('#stat-inactive').text(inactive);
            $('#stat-variants').text(variants);

            // Add animation
            $('.fw-bold').addClass('animate__animated animate__pulse');
            setTimeout(() => $('.fw-bold').removeClass('animate__animated animate__pulse'), 1000);
        }

        function checkEmptyState() {
            let visibleRows = $('#productsTable tbody tr:visible').length;
            if (visibleRows === 0) {
                $('#emptyState').removeClass('d-none');
            } else {
                $('#emptyState').addClass('d-none');
            }
        }

        function showLoading() {
            $('#loadingOverlay').removeClass('d-none');
        }
    </script>

    <style>
        .card {
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
            }

        .table tbody tr:hover {
            background-color: rgba(153, 177, 143, 0.05) !important;
        }

        .btn {
            transition: all 0.3s ease;
        }

            .btn:hover {
                transform: translateY(-1px);
            }

        .badge {
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }

        .table th {
            border: none;
            font-weight: 600;
            color: #495057;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .table td {
            border: none;
            vertical-align: middle;
            font-size: 0.9rem;
        }

        .input-group-text {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
        }

        .form-control:focus {
            border-color: #99b18f;
            box-shadow: 0 0 0 0.2rem rgba(153, 177, 143, 0.25);
        }

        .dropdown-menu {
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .dropdown-item:hover {
            background-color: rgba(153, 177, 143, 0.1);
            color: #495057;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .table tbody tr {
            animation: fadeIn 0.3s ease;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }
    </style>
}