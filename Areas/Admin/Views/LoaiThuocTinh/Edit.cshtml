@model PhuLieuToc.Models.ThuocTinh
@{
    ViewData["Title"] = "Sửa Loại Thuộc Tính";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-edit me-2"></i>Sửa Loại Thuộc Tính</h1>
        <a class="btn btn-secondary" href="/Admin/LoaiThuocTinh"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form id="thuocTinhEditForm">
                @Html.AntiForgeryToken()

                <input type="hidden" id="ThuocTinhId" value="@Model.ThuocTinhId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Tên thuộc tính <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="TenThuocTinh" value="@Model.TenThuocTinh" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Trạng thái</label>
                        <div class="form-check form-switch mt-2">
                            <input class="form-check-input" type="checkbox" id="TrangThai" @(Model.TrangThai == 1 ? "checked" : "")>
                            <label class="form-check-label" for="TrangThai">Đang hoạt động</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" id="MoTa" rows="3">@Model.MoTa</textarea>
                    </div>
                </div>

                <hr />

                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Giá trị thuộc tính</h5>
                    <button type="button" class="btn btn-success" id="btnAddValue"><i class="fas fa-plus me-2"></i>Thêm giá trị</button>
                </div>

                <div id="valuesContainer" class="mb-3">
                    @if (Model.GiaTriThuocTinhs == null || !Model.GiaTriThuocTinhs.Any())
                    {
                        <div class="text-muted" id="noValuesMsg">Chưa có giá trị nào. Nhấn "Thêm giá trị" để bắt đầu.</div>
                    }
                    else
                    {
                        foreach (var v in Model.GiaTriThuocTinhs)
                        {
                            <div class="card mb-2" data-id="@v.GiaTriThuocTinhId">
                                <div class="card-body">
                                    <div class="row g-2 align-items-end">
                                        <div class="col-md-6">
                                            <label class="form-label">Tên giá trị</label>
                                            <input type="text" class="form-control value-name" value="@v.TenGiaTri">
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Trạng thái</label>
                                            <select class="form-select value-status">
                                                @if (v.TrangThai == 1)
                                                {
                                                    <option value="1" selected>Đang hoạt động</option>
                                                    <option value="0">Không hoạt động</option>
                                                }
                                                else
                                                {
                                                    <option value="1">Đang hoạt động</option>
                                                    <option value="0" selected>Không hoạt động</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <button type="button" class="btn btn-outline-danger btn-remove"><i class="fas fa-trash"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu thay đổi</button>
                    <a class="btn btn-secondary" href="/Admin/LoaiThuocTinh">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function(){
    const container = document.getElementById('valuesContainer');
    const addBtn = document.getElementById('btnAddValue');
    const form = document.getElementById('thuocTinhEditForm');

    function addValueRow(){
        if (document.getElementById('noValuesMsg')){
            document.getElementById('noValuesMsg').remove();
        }
        const html = `
            <div class="card mb-2" data-id="0">
                <div class="card-body">
                    <div class="row g-2 align-items-end">
                        <div class="col-md-6">
                            <label class="form-label">Tên giá trị</label>
                            <input type="text" class="form-control value-name" placeholder="Ví dụ: Đỏ, Size M...">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Trạng thái</label>
                            <select class="form-select value-status">
                                <option value="1" selected>Đang hoạt động</option>
                                <option value="0">Không hoạt động</option>
                            </select>
                        </div>
                        <div class="col-md-2 text-end">
                            <button type="button" class="btn btn-outline-danger btn-remove"><i class="fas fa-trash"></i></button>
                        </div>
                    </div>
                </div>
            </div>`;
        container.insertAdjacentHTML('beforeend', html);
    }

    addBtn.addEventListener('click', addValueRow);
    container.addEventListener('click', function(e){
        if (e.target.closest('.btn-remove')){
            e.target.closest('.card').remove();
            if (container.children.length === 0){
                container.innerHTML = '<div class="text-muted" id="noValuesMsg">Chưa có giá trị nào. Nhấn "Thêm giá trị" để bắt đầu.</div>';
            }
        }
    });

    form.addEventListener('submit', async function(ev){
        ev.preventDefault();
        const id = parseInt(document.getElementById('ThuocTinhId').value, 10);
        const ten = document.getElementById('TenThuocTinh').value.trim();
        if (!ten){ alert('Vui lòng nhập tên thuộc tính'); return; }
        const active = document.getElementById('TrangThai').checked ? 1 : 0;
        const moTa = document.getElementById('MoTa').value;
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        // Thu thập toàn bộ giá trị hiện có trong form; controller sẽ xoá hết và thêm lại
        const values = Array.from(container.querySelectorAll('.card'))
            .map(card => card.querySelector('.value-name')?.value.trim() || '')
            .filter(v => v);

        const payload = { 
            TenThuocTinh: ten,
            MoTa: moTa,
            TrangThai: active,
            GiaTriThuocTinhs: values
        };

        try{
            const res = await fetch(`/Admin/LoaiThuocTinh/Edit/${id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token },
                body: JSON.stringify(payload)
            });
            if (res.ok){
                window.location.href = '/Admin/LoaiThuocTinh';
            } else {
                const txt = await res.text();
                alert('Lỗi khi lưu: ' + txt);
            }
        } catch(err){
            alert('Lỗi: ' + err.message);
        }
    });
});
</script>


