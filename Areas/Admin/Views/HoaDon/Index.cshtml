@model IEnumerable<PhuLieuToc.Models.HoaDon>

<style>
    .invoice-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 20px 0;
    }
    
    .invoice-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(153, 177, 143, 0.15);
        overflow: hidden;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }
    
    .invoice-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(153, 177, 143, 0.25);
    }
    
    .invoice-header {
        background: linear-gradient(135deg, #99b18f 0%, #7a9970 100%);
        color: white;
        padding: 25px 30px;
        position: relative;
        overflow: hidden;
    }
    
    .invoice-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20px;
        width: 100px;
        height: 200%;
        background: rgba(255, 255, 255, 0.1);
        transform: rotate(15deg);
        animation: shimmer 3s infinite;
    }
    
    @@keyframes shimmer {
        0% { transform: translateX(-100px) rotate(15deg); }
        50% { transform: translateX(100px) rotate(15deg); }
        100% { transform: translateX(200px) rotate(15deg); }
    }
    
    .invoice-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .invoice-icon {
        background: rgba(255, 255, 255, 0.2);
        padding: 10px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .invoice-stats {
        background: rgba(255, 255, 255, 0.1);
        padding: 15px;
        border-radius: 10px;
        margin-top: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-number {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
    }
    
    .stat-label {
        font-size: 0.9rem;
        opacity: 0.9;
        margin: 0;
    }
    
    .invoice-table-container {
        padding: 0;
        border-radius: 0 0 20px 20px;
        overflow: hidden;
    }
    
    .modern-table {
        margin: 0;
        background: white;
    }
    
    .modern-table thead {
        background: linear-gradient(135deg, #99b18f 0%, #7a9970 100%);
    }
    
    .modern-table thead th {
        border: none;
        color: white;
        font-weight: 600;
        padding: 20px 15px;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
    }
    
    .modern-table tbody tr {
        border: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .modern-table tbody tr:hover {
        background: linear-gradient(135deg, rgba(153, 177, 143, 0.1) 0%, rgba(122, 153, 112, 0.05) 100%);
        transform: scale(1.01);
        box-shadow: 0 5px 15px rgba(153, 177, 143, 0.1);
    }
    
    .modern-table tbody td {
        border: none;
        padding: 20px 15px;
        vertical-align: middle;
        font-size: 0.95rem;
    }
    
    .modern-table tbody tr + tr td {
        border-top: 1px solid rgba(153, 177, 143, 0.1);
    }
    
    .invoice-id {
        font-family: 'Courier New', monospace;
        font-weight: bold;
        color: #99b18f;
        background: rgba(153, 177, 143, 0.1);
        padding: 5px 10px;
        border-radius: 8px;
        font-size: 0.9rem;
        display: inline-block;
    }
    
    .customer-info {
        line-height: 1.6;
    }
    
    .customer-name {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 2px;
    }
    
    .customer-phone {
        color: #6c757d;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }
    
    .total-amount {
        font-weight: bold;
        color: #27ae60;
        font-size: 1.1rem;
    }
    
    .invoice-date {
        color: #5a6c7d;
        font-weight: 500;
    }
    
    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: flex-end;
        flex-wrap: wrap;
    }
    
    .btn-modern {
        border: none;
        border-radius: 10px;
        padding: 8px 16px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .btn-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }
    
    .btn-modern:hover::before {
        left: 100%;
    }
    
    .btn-view {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        border: 2px solid transparent;
    }
    
    .btn-view:hover {
        background: linear-gradient(135deg, #2980b9, #1f5f8b);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
    }
    
    .btn-export {
        background: linear-gradient(135deg, #99b18f, #7a9970);
        color: white;
        border: 2px solid transparent;
    }
    
    .btn-export:hover {
        background: linear-gradient(135deg, #7a9970, #5c7a54);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(153, 177, 143, 0.4);
    }
    
    .no-data {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }
    
    .no-data-icon {
        font-size: 4rem;
        color: #99b18f;
        margin-bottom: 20px;
    }
    
    /* DataTables Custom Styling */
    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter {
        margin-bottom: 20px;
    }
    
    .dataTables_wrapper .dataTables_length select,
    .dataTables_wrapper .dataTables_filter input {
        border: 2px solid #99b18f;
        border-radius: 10px;
        padding: 8px 12px;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border: none;
        border-radius: 8px;
        margin: 0 2px;
        background: linear-gradient(135deg, #99b18f, #7a9970);
        color: white !important;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
        background: linear-gradient(135deg, #7a9970, #5c7a54) !important;
        color: white !important;
    }
    
    .dataTables_wrapper .dataTables_info {
        color: #6c757d;
        font-weight: 500;
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .invoice-stats {
            flex-direction: column;
            gap: 15px;
        }
        
        .action-buttons {
            flex-direction: column;
        }
        
        .modern-table {
            font-size: 0.85rem;
        }
        
        .modern-table thead th,
        .modern-table tbody td {
            padding: 12px 8px;
        }
    }
</style>

<div class="invoice-container">
    <div class="container-fluid">
        <div class="invoice-card">
            <div class="invoice-header">
                <div class="invoice-title">
                    <div class="invoice-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
                        </svg>
                    </div>
                    Hóa đơn hoàn thành
                </div>
                
                <div class="invoice-stats">
                    <div class="stat-item">
                        <p class="stat-number">@Model.Count()</p>
                        <p class="stat-label">Tổng hóa đơn</p>
                    </div>
                    <div class="stat-item">
                        <p class="stat-number">@Model.Sum(h => h.TongTien).ToString("N0")đ</p>
                        <p class="stat-label">Tổng doanh thu</p>
                    </div>
                    <div class="stat-item">
                        <p class="stat-number">@(Model.Any() ? Model.Average(h => h.TongTien).ToString("N0") : "0")đ</p>
                        <p class="stat-label">Trung bình/đơn</p>
                    </div>
                </div>
            </div>
            
            <div class="invoice-table-container">
                @if (Model.Any())
                {
                    <table id="invoicesTable" class="table modern-table align-middle">
                        <thead>
                            <tr>
                                <th>Mã hóa đơn</th>
                                <th>Thông tin khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var h in Model)
                        {
                            <tr>
                                <td>
                                    <span class="invoice-id">@h.HoaDonId.ToString().Substring(0,8).ToUpper()</span>
                                </td>
                                <td>
                                    <div class="customer-info">
                                        <div class="customer-name">@h.TenKhachHang</div>
                                        <div class="customer-phone">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z"/>
                                            </svg>
                                            @h.SoDienThoai
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="total-amount">@h.TongTien.ToString("N0")đ</span>
                                </td>
                                <td>
                                    <div class="invoice-date">@h.NgayTao.ToString("dd/MM/yyyy HH:mm")</div>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@h.HoaDonId" class="btn btn-modern btn-view btn-sm">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 5px;">
                                                <path d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"/>
                                            </svg>
                                            Xem
                                        </a>
                                        <a asp-action="Export" asp-route-id="@h.HoaDonId" class="btn btn-modern btn-export btn-sm">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 5px;">
                                                <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
                                            </svg>
                                            Xuất
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="no-data">
                        <div class="no-data-icon">📋</div>
                        <h4>Chưa có hóa đơn nào</h4>
                        <p>Hiện tại chưa có hóa đơn hoàn thành nào trong hệ thống.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/2.3.2/js/dataTables.min.js"></script>
<script src="https://cdn.datatables.net/2.3.2/js/dataTables.bootstrap5.min.js"></script>
<script>
$(document).ready(function() {
    if ($.fn.DataTable.isDataTable('#invoicesTable')) {
        $('#invoicesTable').DataTable().destroy();
    }
    
    $('#invoicesTable').DataTable({
        order: [[3, 'desc']],
        language: {
            "sProcessing": "Đang xử lý...",
            "sLengthMenu": "Hiển thị _MENU_ mục",
            "sZeroRecords": "Không tìm thấy dòng nào phù hợp",
            "sInfo": "Đang hiển thị _START_ đến _END_ trong tổng số _TOTAL_ mục",
            "sInfoEmpty": "Đang hiển thị 0 đến 0 trong tổng số 0 mục",
            "sInfoFiltered": "(được lọc từ _MAX_ mục)",
            "sInfoPostFix": "",
            "sSearch": "Tìm kiếm:",
            "sUrl": "",
            "oPaginate": {
                "sFirst": "Đầu",
                "sPrevious": "Trước",
                "sNext": "Tiếp",
                "sLast": "Cuối"
            }
        },
        responsive: true,
        pageLength: 10,
        lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Tất cả"]],
        dom: '<"row"<"col-sm-6"l><"col-sm-6"f>>' +
             '<"row"<"col-sm-12"tr>>' +
             '<"row"<"col-sm-5"i><"col-sm-7"p>>',
        drawCallback: function(settings) {
            // Add hover effects after each draw
            $('#invoicesTable tbody tr').hover(
                function() {
                    $(this).addClass('table-hover-effect');
                },
                function() {
                    $(this).removeClass('table-hover-effect');
                }
            );
        }
    });
    
    // Add click animation to action buttons
    $('.btn-modern').on('click', function() {
        $(this).addClass('btn-clicked');
        setTimeout(() => {
            $(this).removeClass('btn-clicked');
        }, 150);
    });
});
</script>
<style>
.btn-clicked {
    transform: scale(0.95) !important;
}

.table-hover-effect {
    transform: scale(1.01) !important;
}

/* Additional mobile responsiveness */
@@media (max-width: 576px) {
    .invoice-header {
        padding: 20px 15px;
    }
    
    .invoice-title {
        font-size: 1.3rem;
    }
    
    .invoice-stats {
        flex-direction: column;
        gap: 10px;
    }
    
    .stat-item {
        flex: 1;
    }
    
    .action-buttons {
        flex-direction: column;
        gap: 5px;
    }
    
    .btn-modern {
        width: 100%;
        justify-content: center;
    }
}
</style>
}