@using PhuLieuToc.Models
@model IEnumerable<BrandModel>

@{
	ViewData["Title"] = "Quản lý Thương hiệu";
}

<div class="container-fluid py-3">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h2 class="m-0">Thương hiệu</h2>
		<div>
			<a asp-area="Admin" asp-controller="ThuongHieu" asp-action="Create" class="btn btn-primary">
				<i class="fa fa-plus"></i> Thêm thương hiệu
			</a>
		</div>
	</div>

	<form method="get" class="row g-2 mb-3">
		<div class="col-sm-4">
			<input name="q" value="@Context.Request.Query["q"]" class="form-control" placeholder="Tìm theo tên hoặc slug..." />
		</div>
		<div class="col-sm-3">
			<select name="status" class="form-select">
				<option value="">Tất cả trạng thái</option>
				<option value="1" selected="@(Context.Request.Query["status"] == "1")">Đang hoạt động</option>
				<option value="0" selected="@(Context.Request.Query["status"] == "0")">Ngừng hoạt động</option>
			</select>
		</div>
		<div class="col-sm-5 d-flex gap-2">
			<button class="btn btn-outline-secondary" type="submit"><i class="fa fa-search"></i> Tìm kiếm</button>
			<a asp-area="Admin" asp-controller="ThuongHieu" asp-action="Index" class="btn btn-outline-dark"><i class="fa fa-undo"></i> Làm mới</a>
		</div>
	</form>

	<div class="table-responsive bg-white shadow-sm rounded">
		<table class="table table-hover align-middle m-0">
			<thead class="table-light">
				<tr>
					<th style="width:56px">#</th>
					<th>Tên thương hiệu</th>
					<th>Slug</th>
					<th>Mô tả</th>
					<th style="width:120px">Trạng thái</th>
					<th style="width:150px" class="text-end">Thao tác</th>
				</tr>
			</thead>
			<tbody>
				@if (Model == null || !Model.Any())
				{
					<tr>
						<td colspan="6" class="text-center text-muted py-4">Không có dữ liệu</td>
					</tr>
				}
				else
				{
					var index = 1;
					foreach (var item in Model)
					{
						<tr>
							<td>@index</td>
							<td class="fw-semibold">@item.TenThuongHieu</td>
							<td><code>@item.Slug</code></td>
							<td class="text-truncate" style="max-width:360px">@item.MoTa</td>
							<td>
								<span class="badge @(item.TrangThai == 1 ? "bg-success" : "bg-secondary")">@(item.TrangThai == 1 ? "Hoạt động" : "Tắt")</span>
							</td>
							<td class="text-end">
								<a asp-area="Admin" asp-controller="ThuongHieu" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
									<i class="fa fa-pencil"></i>
								</a>
								<form asp-area="Admin" asp-controller="ThuongHieu" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Xóa thương hiệu này?');">
									<button type="submit" class="btn btn-sm btn-outline-danger">
										<i class="fa fa-trash"></i>
									</button>
								</form>
							</td>
						</tr>
						index++;
					}
				}
			</tbody>
		</table>
	</div>

	@* Placeholder phân trang nếu controller có *@
	<div class="d-flex justify-content-end mt-3">
		@* Pagination placeholder (inject a partial or pager here if needed) *@
	</div>
</div>


