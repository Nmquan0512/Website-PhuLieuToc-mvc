@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "_Layout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-sitemap me-2"></i>Quản lý Danh mục
            </h1>
            <p class="text-muted">Quản lý các danh mục phụ liệu tóc chính</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
            <i class="fas fa-plus me-2"></i>Thêm danh mục mới
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng danh mục
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">6</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-sitemap fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Đang hoạt động
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">6</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Có danh mục con
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">4</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-folder fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Sản phẩm
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">156</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Danh sách danh mục phụ liệu tóc</h6>
                    <div class="d-flex gap-2">
                        <div class="input-group" style="width: 300px;">
                            <input type="text" class="form-control" placeholder="Tìm kiếm danh mục..." id="searchInput">
                            <button class="btn btn-outline-secondary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <select class="form-select" style="width: 150px;" id="filterStatus">
                            <option value="">Tất cả trạng thái</option>
                            <option value="active">Đang hoạt động</option>
                            <option value="inactive">Không hoạt động</option>
                        </select>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="categoriesTable">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;">
                                        <input type="checkbox" class="form-check-input" id="selectAll">
                                    </th>
                                    <th style="width: 60px;">ID</th>
                                    <th>Tên danh mục</th>
                                    <th>Mô tả</th>

                                    <th>Trạng thái</th>
                                    <th>Số danh mục nhỏ</th>
                                    <th style="width: 150px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" class="form-check-input category-checkbox">
                                        </td>
                                        <td>@category.Id</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-cut text-warning me-2"></i>
                                                <strong>@category.TenDanhMuc</strong>
                                            </div>
                                        </td>
                                        <td>@category.MoTa</td>

                                        <td>
                                            @if (category.TrangThai == 1)
                                            {
                                                <span class="badge bg-success">Đang hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Không hoạt động</span>
                                            }
                                        </td>

                                        @if (category.Children == null || category.Children.Count == 0)
                                        {
                                            <td>Chưa có danh mục con</td>
                                           
                                        }
                                        else
                                        {
                                            <td>@category.Children.Count</td>
                                        }
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-success" title="Quản lý danh mục con">
                                                    <i class="fas fa-list"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>




                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Pagination -->
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            Hiển thị 1-6 của 6 danh mục
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Trước</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Sau</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm danh mục -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">
                    <i class="fas fa-plus me-2"></i>Thêm danh mục mới
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addCategoryForm">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Tên danh mục <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="categoryName" placeholder="Nhập tên danh mục phụ liệu tóc..." required>
                    </div>
                    
                    <div class="mb-3">

                        <input type="hidden" class="form-control" id="categorySlug" placeholder="" readonly>

                    </div>
                    
                    <div class="mb-3">
                        <label for="categoryDescription" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="categoryDescription" rows="3" placeholder="Mô tả ngắn gọn về danh mục phụ liệu tóc..."></textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="categoryActive" class="form-label">Trạng thái</label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="categoryActive" checked>
                                    <label class="form-check-label" for="categoryActive">
                                        Danh mục đang hoạt động
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Thao tác</label>
                                <div class="d-grid">
                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addSubcategoryModal">
                                        <i class="fas fa-plus me-2"></i>Thêm danh mục con
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Phần hiển thị danh mục con -->
                    <div class="mb-3">
                        <label class="form-label">Danh mục con đã thêm:</label>
                        <div id="subcategoriesList" class="border rounded p-3 bg-light">
                            <div class="text-muted text-center">
                                <i class="fas fa-folder-open me-2"></i>Chưa có danh mục con nào
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" form="addCategoryForm" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Lưu danh mục
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm danh mục con -->
<div class="modal fade" id="addSubcategoryModal" tabindex="-1" aria-labelledby="addSubcategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSubcategoryModalLabel">
                    <i class="fas fa-plus me-2"></i>Thêm danh mục con
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addSubcategoryForm">
                    <div class="mb-3">
                        <label class="form-label">Danh mục cha</label>
                        
                        <!-- Thông báo danh mục cha đang được chọn -->
                        <div id="parentCategoryInfo" class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <span id="parentCategoryText">Chưa có danh mục cha nào được chọn</span>
                        </div>
                        
                        <!-- Hidden input để lưu ID danh mục cha -->
                        <input type="hidden" id="parentCategory" name="parentCategory" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="subcategoryName" class="form-label">Tên danh mục con <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="subcategoryName" placeholder="Nhập tên danh mục con..." required>
                    </div>
                    
                    <div class="mb-3">
                        <input type="hidden" class="form-control" id="subcategorySlug" placeholder="" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label for="subcategoryDescription" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="subcategoryDescription" rows="3" placeholder="Mô tả ngắn gọn về danh mục con..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="subcategoryActive" class="form-label">Trạng thái</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="subcategoryActive" checked>
                            <label class="form-check-label" for="subcategoryActive">
                                Danh mục con đang hoạt động
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" form="addSubcategoryForm" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Lưu danh mục con
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Xử lý checkbox "Chọn tất cả"
    const selectAllCheckbox = document.getElementById('selectAll');
    const categoryCheckboxes = document.querySelectorAll('.category-checkbox');
    
    selectAllCheckbox.addEventListener('change', function() {
        categoryCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });
    
    // Xử lý tìm kiếm
    const searchInput = document.getElementById('searchInput');
    const filterStatus = document.getElementById('filterStatus');
    
    function filterCategories() {
        const searchTerm = searchInput.value.toLowerCase();
        const statusFilter = filterStatus.value;
        
        const rows = document.querySelectorAll('#categoriesTable tbody tr');
        
        rows.forEach(row => {
            const categoryName = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
            const status = row.querySelector('td:nth-child(5)').textContent;
            
            const matchesSearch = categoryName.includes(searchTerm);
            const matchesStatus = !statusFilter || status.includes(statusFilter === 'active' ? 'Đang hoạt động' : 'Không hoạt động');
            
            row.style.display = matchesSearch && matchesStatus ? '' : 'none';
        });
    }
    
    searchInput.addEventListener('input', filterCategories);
    filterStatus.addEventListener('change', filterCategories);
    
    // Xử lý form thêm danh mục
    const addCategoryForm = document.getElementById('addCategoryForm');
    const categoryNameInput = document.getElementById('categoryName');
    const categorySlugInput = document.getElementById('categorySlug');
    
    // Tự động tạo slug từ tên danh mục
    categoryNameInput.addEventListener('input', function() {
        const slug = this.value
            .toLowerCase()
            .replace(/đ/g, 'd')
            .replace(/[^a-z0-9\s-]/g, '')
            .replace(/\s+/g, '-')
            .replace(/-+/g, '-')
            .trim('-');
        categorySlugInput.value = slug;
        
        // Cập nhật thông báo trong modal danh mục con nếu đang mở
        const subcategoryModal = document.getElementById('addSubcategoryModal');
        if (subcategoryModal.classList.contains('show')) {
            const parentCategoryText = document.getElementById('parentCategoryText');
            if (parentCategoryText && this.value.trim() !== '') {
                parentCategoryText.textContent = `Đang thêm danh mục con cho: "${this.value.trim()}"`;
            }
        }
    });
    
    addCategoryForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Xử lý lưu danh mục ở đây
        alert('Danh mục đã được lưu thành công!');
        
        // Đóng modal
        const modal = bootstrap.Modal.getInstance(document.getElementById('addCategoryModal'));
        modal.hide();
        
        // Reset form
        addCategoryForm.reset();
    });
    
    // Xử lý form thêm danh mục con
    const addSubcategoryForm = document.getElementById('addSubcategoryForm');
    const subcategoryNameInput = document.getElementById('subcategoryName');
    const subcategorySlugInput = document.getElementById('subcategorySlug');
    const parentCategorySelect = document.getElementById('parentCategory');
    
    // Tự động tạo slug từ tên danh mục con
    subcategoryNameInput.addEventListener('input', function() {
        const slug = this.value
            .toLowerCase()
            .replace(/đ/g, 'd')
            .replace(/[^a-z0-9\s-]/g, '')
            .replace(/\s+/g, '-')
            .replace(/-+/g, '-')
            .trim('-');
        subcategorySlugInput.value = slug;
    });
    
    // Xử lý submit form danh mục con
    addSubcategoryForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const parentCategoryHidden = document.getElementById('parentCategory');
        const parentCategoryId = parentCategoryHidden.value;
        const parentCategoryName = parentCategoryHidden.getAttribute('data-parent-name');
        const subcategoryName = subcategoryNameInput.value;
        const subcategoryDescription = document.getElementById('subcategoryDescription').value;
        const subcategoryActive = document.getElementById('subcategoryActive').checked;
        
        if (!parentCategoryId || parentCategoryId === '') {
            alert('Vui lòng mở modal từ danh mục cha!');
            return;
        }
        
        if (!subcategoryName) {
            alert('Vui lòng nhập tên danh mục con!');
            return;
        }
        
        // Tạo đối tượng danh mục con
        const subcategory = {
            id: Date.now(), // Tạm thời dùng timestamp làm ID
            name: subcategoryName,
            description: subcategoryDescription,
            active: subcategoryActive,
            parentId: parentCategoryId,
            parentName: parentCategoryName
        };
        
        // Thêm danh mục con vào danh sách hiển thị
        addSubcategoryToList(subcategory);
        
        // Xử lý lưu danh mục con ở đây (sẽ gọi API)
        console.log('Đang lưu danh mục con:', subcategory);
        
        // Đóng modal danh mục con
        const subcategoryModal = bootstrap.Modal.getInstance(document.getElementById('addSubcategoryModal'));
        subcategoryModal.hide();
        
        // Reset form
        addSubcategoryForm.reset();
        
        // Hiển thị thông báo thành công
        alert('Danh mục con đã được thêm thành công!');
    });
    
    // Hàm thêm danh mục con vào danh sách hiển thị
    function addSubcategoryToList(subcategory) {
        const subcategoriesList = document.getElementById('subcategoriesList');
        
        // Xóa thông báo "Chưa có danh mục con nào"
        if (subcategoriesList.querySelector('.text-muted')) {
            subcategoriesList.innerHTML = '';
        }
        
        // Tạo element hiển thị danh mục con
        const subcategoryItem = document.createElement('div');
        subcategoryItem.className = 'd-flex justify-content-between align-items-center p-2 border-bottom';
        subcategoryItem.innerHTML = `
            <div>
                <strong>${subcategory.name}</strong>
                <br>
                <small class="text-muted">Danh mục con của: <strong>${subcategory.parentName}</strong></small>
                <br>
                <small class="text-muted">${subcategory.description || 'Không có mô tả'}</small>
            </div>
            <div class="d-flex gap-1">
                <span class="badge ${subcategory.active ? 'bg-success' : 'bg-secondary'}">
                    ${subcategory.active ? 'Hoạt động' : 'Không hoạt động'}
                </span>
                <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeSubcategory(${subcategory.id})">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        `;
        
        subcategoriesList.appendChild(subcategoryItem);
    }
    
    // Hàm xóa danh mục con khỏi danh sách
    window.removeSubcategory = function(id) {
        const subcategoriesList = document.getElementById('subcategoriesList');
        const items = subcategoriesList.querySelectorAll('.d-flex.justify-content-between');
        
        items.forEach(item => {
            if (item.querySelector('.btn-outline-danger').getAttribute('onclick').includes(id)) {
                item.remove();
            }
        });
        
        // Kiểm tra nếu không còn danh mục con nào thì hiển thị thông báo
        if (subcategoriesList.children.length === 0) {
            subcategoriesList.innerHTML = `
                <div class="text-muted text-center">
                    <i class="fas fa-folder-open me-2"></i>Chưa có danh mục con nào
                </div>
            `;
        }
    };
    
    // Cập nhật danh mục cha khi mở modal
    document.getElementById('addSubcategoryModal').addEventListener('show.bs.modal', function() {
        // Lấy tên danh mục cha từ modal chính
        const categoryNameInput = document.getElementById('categoryName');
        const parentCategoryHidden = document.getElementById('parentCategory');
        const parentCategoryText = document.getElementById('parentCategoryText');
        
        if (categoryNameInput && categoryNameInput.value.trim() !== '') {
            const categoryName = categoryNameInput.value.trim();
            
            // Tạo ID tạm thời cho danh mục cha (sẽ được thay thế bằng ID thật khi lưu)
            const tempParentId = 'temp_' + Date.now();
            parentCategoryHidden.value = tempParentId;
            
            // Hiển thị thông báo danh mục cha đang được chọn
            parentCategoryText.textContent = `Đang thêm danh mục con cho: "${categoryName}"`;
            
            // Lưu tên danh mục cha vào data attribute để sử dụng sau này
            parentCategoryHidden.setAttribute('data-parent-name', categoryName);
        } else {
            // Nếu không có tên danh mục cha
            parentCategoryHidden.value = '';
            parentCategoryText.textContent = 'Chưa có danh mục cha nào được chọn';
            parentCategoryHidden.removeAttribute('data-parent-name');
        }
        
        console.log('Modal thêm danh mục con đang mở');
    });
});
</script>
