@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quên mật khẩu - Phụ Liệu Tóc</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        :root{ --primary:#7a9470; --primary-600:#6b835f; }
        body{ background:linear-gradient(135deg,#f7faf7,#eef7ee); min-height:100vh; display:flex; align-items:center; }
        .card{ max-width:520px; margin:auto; border-radius:16px; box-shadow:0 12px 36px rgba(122,148,112,.18); }
        .card-header{ background:var(--primary); color:#fff; border-radius:16px 16px 0 0; }
        .btn-primary{ background:var(--primary-600); border-color:var(--primary-600); border-radius:12px; }
        .form-control{ border-radius:12px; }
        a{ color:var(--primary-600); text-decoration:none; }
    </style>
</head>
<body>
    <div class="card w-100">
        <div class="card-header d-flex align-items-center gap-2">
            <i class="fa-solid fa-unlock-keyhole"></i>
            <strong>Quên mật khẩu</strong>
        </div>
        <div class="card-body">
            @if (ViewBag.Error != null) { <div class="alert alert-danger mb-3">@ViewBag.Error</div> }
            @if (TempData["Success"] != null) { <div class="alert alert-success mb-3">@TempData["Success"]</div> }
            <form method="post" asp-controller="Login" asp-action="ForgotPassword">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" type="email" class="form-control" required />
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit"><i class="fa-solid fa-paper-plane me-1"></i>Gửi mã OTP</button>
                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-right-to-bracket me-1"></i>Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

