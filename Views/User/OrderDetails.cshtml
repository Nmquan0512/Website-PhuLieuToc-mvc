@model PhuLieuToc.Models.ViewModels.OrderStatusViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Orders")">Đơn hàng của tôi</a></li>
                    <li class="breadcrumb-item active">Chi tiết đơn hàng</li>
                </ol>
            </nav>
            
            <h2 class="mb-4">
                <i class="fas fa-receipt me-2"></i>Chi tiết đơn hàng #@Model.HoaDonId.ToString().Substring(0, 8).ToUpper()
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Thông tin khách hàng:</h6>
                            <p><strong>Tên:</strong> @Model.TenKhachHang</p>
                            <p><strong>SĐT:</strong> @Model.SoDienThoai</p>
                            <p><strong>Địa chỉ:</strong> @Model.DiaChiGiaoHang</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Thông tin đơn hàng:</h6>
                            <p><strong>Ngày đặt:</strong> @Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Trạng thái:</strong> 
                                <span class="badge @GetStatusBadgeClass(Model.TrangThai)">
                                    @Model.TrangThaiText
                                </span>
                            </p>
                            <p><strong>Thanh toán:</strong> 
                                <span class="badge @(Model.PhuongThucThanhToan == "COD" ? "bg-warning" : "bg-info")">
                                    @Model.PhuongThucThanhToan
                                </span>
                            </p>
                            <p><strong>Tổng tiền:</strong> 
                                <span class="text-primary fw-bold fs-5">@Model.TongTien.ToString("N0") ₫</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Sản phẩm đã đặt</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ChiTietHoaDon)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.HinhAnhLucMua))
                                                {
                                                    <img src="@item.HinhAnhLucMua" alt="@item.TenSanPhamLucMua" class="me-3" style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;">
                                                }
                                                else
                                                {
                                                    <div class="me-3 bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; border-radius: 8px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <h6 class="mb-1">@item.TenSanPhamLucMua</h6>
                                                    @if (!string.IsNullOrEmpty(item.ThuongHieuLucMua))
                                                    {
                                                        <small class="text-muted">@item.ThuongHieuLucMua</small>
                                                    }
                                                    @if (!string.IsNullOrEmpty(item.LoaiThuocTinhLucMua))
                                                    {
                                                        <br><small class="text-muted">@item.LoaiThuocTinhLucMua</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.DonGia.ToString("N0") ₫</td>
                                        <td>@item.SoLuong</td>
                                        <td><strong>@item.ThanhTien.ToString("N0") ₫</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-primary">
                                    <th colspan="3">Tổng cộng:</th>
                                    <th>@Model.TongTien.ToString("N0") ₫</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Trạng thái đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item @(Model.TrangThai >= 0 ? "completed" : "")">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <h6>Chờ duyệt</h6>
                                <small class="text-muted">Đơn hàng đã được tiếp nhận</small>
                            </div>
                        </div>
                        <div class="timeline-item @(Model.TrangThai >= 1 ? "completed" : "")">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <h6>Đã duyệt</h6>
                                <small class="text-muted">Đơn hàng đã được xác nhận</small>
                            </div>
                        </div>
                        <div class="timeline-item @(Model.TrangThai >= 2 ? "completed" : "")">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6>Đang giao</h6>
                                <small class="text-muted">Đơn hàng đang được vận chuyển</small>
                            </div>
                        </div>
                        <div class="timeline-item @(Model.TrangThai >= 3 ? "completed" : "")">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6>Đã giao</h6>
                                <small class="text-muted">Đơn hàng đã được giao thành công</small>
                            </div>
                        </div>
                        @if (Model.TrangThai == 4)
                        {
                            <div class="timeline-item completed">
                                <div class="timeline-marker bg-danger"></div>
                                <div class="timeline-content">
                                    <h6>Đã hủy</h6>
                                    <small class="text-muted">Đơn hàng đã bị hủy</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Thao tác</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.TrangThai <= 1)
                        {
                            <button class="btn btn-outline-danger" onclick="cancelOrder('@Model.HoaDonId')">
                                <i class="fas fa-times me-2"></i>Hủy đơn hàng
                            </button>
                        }
                        <a href="@Url.Action("Orders")" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 15px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #e9ecef;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -22px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #e9ecef;
    }

    .timeline-item.completed .timeline-marker {
        box-shadow: 0 0 0 2px #28a745;
    }

    .timeline-content h6 {
        margin-bottom: 5px;
        font-weight: 600;
    }
</style>

@functions {
    string GetStatusBadgeClass(int status)
    {
        return status switch
        {
            0 => "bg-warning",
            1 => "bg-info", 
            2 => "bg-primary",
            3 => "bg-success",
            4 => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (!confirm('Bạn có chắc muốn hủy đơn hàng này?')) {
                return;
            }

            fetch('@Url.Action("CancelOrder")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `orderId=${orderId}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Hiển thị thông báo thành công
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-success alert-dismissible fade show position-fixed';
                    alertDiv.style.top = '20px';
                    alertDiv.style.right = '20px';
                    alertDiv.style.zIndex = '9999';
                    alertDiv.innerHTML = `
                        <i class="fas fa-check-circle me-2"></i>${data.message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    document.body.appendChild(alertDiv);
                    
                    // Tự động ẩn sau 3 giây
                    setTimeout(() => {
                        if (alertDiv.parentNode) {
                            alertDiv.parentNode.removeChild(alertDiv);
                        }
                    }, 3000);

                    // Reload trang sau 1 giây
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    alert(data.message || 'Có lỗi xảy ra');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi hủy đơn hàng');
            });
        }

        // Auto refresh trang mỗi 30 giây để cập nhật trạng thái real-time
        setInterval(() => {
            // Chỉ refresh nếu không có modal hoặc form đang mở
            if (!document.querySelector('.modal.show') && !document.querySelector('form:focus')) {
                location.reload();
            }
        }, 30000);
    </script>
}
