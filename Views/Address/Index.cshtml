@model List<PhuLieuToc.Models.DiaChiGiaoHang>

@{
    ViewData["Title"] = "Địa chỉ giao hàng";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ giao hàng</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Thêm địa chỉ mới
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var address in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 @(address.LaMacDinh ? "border-primary" : "")">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">
                                        @if (address.LaMacDinh)
                                        {
                                            <span class="badge bg-primary me-2">Mặc định</span>
                                        }
                                        @address.HoTen
                                    </h6>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@address.Id">
                                                <i class="fas fa-edit me-2"></i>Chỉnh sửa
                                            </a></li>
                                            @if (!address.LaMacDinh)
                                            {
                                                <li><a class="dropdown-item" href="#" onclick="setDefault(@address.Id)">
                                                    <i class="fas fa-star me-2"></i>Đặt mặc định
                                                </a></li>
                                            }
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" href="#" onclick="deleteAddress(@address.Id)">
                                                <i class="fas fa-trash me-2"></i>Xóa
                                            </a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <strong><i class="fas fa-phone me-2"></i></strong>@address.SoDienThoai<br>
                                        <strong><i class="fas fa-map-marker-alt me-2"></i></strong>@address.DiaChiDayDu
                                    </p>
                                    @if (!string.IsNullOrEmpty(address.GhiChu))
                                    {
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="fas fa-sticky-note me-1"></i>@address.GhiChu
                                            </small>
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Chưa có địa chỉ nào</h4>
                    <p class="text-muted">Thêm địa chỉ giao hàng để thuận tiện hơn khi mua sắm</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Thêm địa chỉ đầu tiên
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setDefault(id) {
            if (confirm('Bạn có chắc muốn đặt địa chỉ này làm mặc định?')) {
                fetch('@Url.Action("SetDefault")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${id}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Có lỗi xảy ra');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra');
                });
            }
        }

        function deleteAddress(id) {
            if (confirm('Bạn có chắc muốn xóa địa chỉ này?')) {
                fetch('@Url.Action("Delete")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${id}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Có lỗi xảy ra');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra');
                });
            }
        }
    </script>
}
